<%- include('header') -%>
<body>
  <div class="box" id="heading">
    <h1><%=list_title%></h1>
  </div>
  <div class="box">
    <% for(var i=0; i<tasks.length; i++){ %>
    <div class="item">
      <input type="checkbox">
      <p><%=tasks[i]%></p>
    </div>
    <%}%>
        <form class="item" action="/" method="post">
          <input type="text" name="task" placeholder="New Task" autocomplete="off">
          <button type="submit" name="list" value=<%=list_type%>>+</button>
    </form>
  </div>
</body>
<%- include('footer') -%>
